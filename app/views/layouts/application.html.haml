!!!
%html
%head

  %meta{:charset => "utf-8"}
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  %meta{:name => "description", :content => ""}
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}

  %title= full_page_title(yield(:title))
  = include_gon
  %link{:href => "https://fonts.googleapis.com/css?family=Montserrat:400,700|Open+Sans:400,700,600", :rel => "stylesheet", :type => "text/css"}
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags

%body{:class => @home_page ? 'homepage' : ''}

  %nav.navbar.navbar-inverse.navbar-static-top
    .container
      .navbar-header
        %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#main-menu-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        -# .navbar-brand= link_to "TeachArena", root_path
        = link_to (root_path), class: "navbar-brand" do
          = image_tag("logo.png", class: "navbar--logo")

      #main-menu-1.collapse.navbar-collapse

        - if user_signed_in?
          %ul.nav.navbar-nav.navbar-right
            %li= link_to "The Idea", new_post_path
            %li= link_to "Teach Something", new_post_path
            %li= link_to "Learn Something", new_request_path
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                My Account
                %span.caret
              %ul.dropdown-menu
                %li= link_to "My Profile", current_user
                %li= link_to "Edit Profile", edit_user_profile_path(current_user.id, current_user.profile.id)
                / %li= link_to "Account", edit_user_registration_path
                %li= link_to "Setting", "#"
                %li.divider{role: "separator"}
                %li= link_to "Sign Out", destroy_user_session_path, method: :delete

        - else
          %ul.nav.navbar-nav.navbar-right
            %li= link_to "Teach Something", new_post_path
            %li= link_to "Learn Something", new_request_path
            %li= link_to "Sign Up", new_user_registration_path
            %li= link_to "Sign In", new_user_session_path


    .container
      - flash.each do |name, msg|
        = content_tag :div, msg, class: "alert alert-info"

  = yield

  = render 'shared/footer'

  -# = debug(params) if Rails.env.development?
