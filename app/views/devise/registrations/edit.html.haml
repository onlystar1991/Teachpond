.header--section.header--profile
  .container.header--content
    .row

      .profile--content.clear
        .col-xs-12.col-sm-3.col-md-2
          .main--profile--picture
            = gravatar_for current_user

        .col-xs-12.col-sm-9.col-md-10
          %h2.profile--name= current_user.profile.name
          %p.profile--country
            = current_user.profile.city
            ,
            = current_user.profile.country

      .col-xs-12
        .sub--nav
          %ul.nav.nav-tabs
            %li
              = link_to "My profile", current_user
            %li
              = link_to "Edit profile", edit_user_profile_path(current_user.id, current_user.profile.id)
            %li.active
              = link_to "Account Settings", edit_user_registration_path

.container
  .row.content--section
    .col-xs-12.col-sm-7.col-md-5
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = f.error_notification
        .form-inputs
          = f.input :email, required: true, autofocus: true
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %p
              Currently waiting confirmation for: #{resource.unconfirmed_email}
          = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false
          = f.input :password_confirmation, required: false
          = f.input :current_password, hint: "we need your current password to confirm your changes", required: true
        .form-actions
          = f.button :submit, "Update"
    .col-xs-12.col-sm-5.col-md-6.col-md-offset-1
      %h3 Cancel my account
      %p
        Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
