- provide(:title, "Browse")

= render 'header'

.container
  .row.content--section

    .col-xs-12.col-sm-3.col-md-2
      .filter--section
        %h4.filter--title Categories
        %ul.list--reset.filter--list
          %li
            = link_to "All", browse_path
            %span.pull-right (#{@posts.length + @requests.length})
          - @categories.each do |category|
            %li
              - if category.record_count > 1
                = link_to category.title.titleize.pluralize, category_browse_index_path(category)
              - else
                = link_to category.title.titleize, category_browse_index_path(category)

              %span.pull-right (#{category.record_count})

      .filter--section
        %h4.filter--title Sort by City
        = render 'shared/browse/post_types'

    .col-xs-12.col-sm-9.col-md-10
      .area--section
        - if ! @search_title.nil?
          .col-xs-12
            %h4 Things to learn in #{@search_title}
        - else
          .col-xs-12
            %h4 Things to learn all over the world

        .row.area--button--section
          .area--button.col-xs-12
            = link_to posts_path, class: "btn btn-primary btn--teacher" do
              %span Browse Teachers

        .row
          - @posts.each do |post|
            .col-xs-12.col-sm-6.col-md-4
              .post--box.box
                .post--info
                  %p
                    %span.info--city= post.location.city
                    %span.info--price.pull-right.dollar--sign
                      = post.price
                      hr
                .post--title
                  %h3= link_to post.title, post
                .post--profile
                  = gravatar_for post.user.profile
                  = link_to post.user.profile.name, post.user
                  %a.post--message--icon.pull-right{ href: "#0", alt: "Message"}
                    %i.fa.fa-envelope-o
        - if ! @search_title.nil?
          .col-xs-12
            %h4 Things to teach in #{@search_title}
        - else
          .col-xs-12
            %h4 Things to teach all over the world
        .row.area--button--section
          .area--button.col-xs-12
            = link_to requests_path, class: "btn btn-info btn--student" do
              %span Browse Students

        .row
          - @requests.each do |request|
            .col-xs-12.col-sm-6.col-md-4
              .request--box.box
                .request--info
                  %p
                    %span.info--city= request.location.city
                    %span.info--price.pull-right.dollar--sign
                      = request.price
                      hr
                .request--title
                  %h3= link_to request.title, request
                .request--profile
                  = gravatar_for request.user.profile
                  = link_to request.user.profile.name, request.user
                  %a.request--message--icon.pull-right{ href: "#0", alt: "Message"}
                    %i.fa.fa-envelope-o
